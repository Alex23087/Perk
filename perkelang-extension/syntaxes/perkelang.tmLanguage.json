{
  "scopeName": "source.perkelang",
  "name": "Perkelang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#embedded-c"
    },
    {
      "include": "#lambdas"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.perkelang",
          "match": "//.*$"
        },
        {
          "name": "comment.block.perkelang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.perkelang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.perkelang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.perkelang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.perkelang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.perkelang",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.octal.perkelang",
          "match": "\\b0o[0-7]+\\b"
        },
        {
          "name": "constant.numeric.binary.perkelang",
          "match": "\\b0b[01]+\\b"
        },
        {
          "name": "constant.numeric.float.perkelang",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.perkelang",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.perkelang",
          "match": "\\b(let|import|extern|archetype|model|fun|for|while|do|if|else|return|summon|banish)\\b"
        },
        {
          "name": "keyword.other.begin-c.perkelang",
          "match": "\\bBEGIN_C\\b"
        },
        {
          "name": "keyword.other.end-c.perkelang",
          "match": "\\bEND_C\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.perkelang",
          "match": "\\b(int|void|uint8_t|uint16_t|uint32_t|uint64_t|float|double|bool)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.definition.perkelang",
          "match": "\\bfun\\s+(\\w+)"
        },
        {
          "name": "entity.name.function.perkelang",
          "match": "\\blet\\s+(\\w+)\\s*:"
        }
      ]
    },
    "embedded-c": {
      "patterns": [
        {
          "name": "source.c.embedded.perkelang",
          "begin": "\\bBEGIN_C\\b",
          "end": "\\bEND_C\\b",
          "patterns": [
            {
              "include": "source.c"
            }
          ]
        }
      ]
    }
  }
}