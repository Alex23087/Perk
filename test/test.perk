import "stdio.h";
import "stdlib.h";
import "malloc.h";
import "stdint.h";

extern printf : (char* * ...) -> int;

archetype UIElement {
    posx : float,
    posy : float,

    draw : () -> void
};

model Button: UIElement {
    let constructor: (float * float) -> void = (posx: float, posy: float): void => {
        self.posx = posx;
        self.posy = posy;
    },

    let posx : float = 0.,
    let posy : float = 0.,
    let draw : () -> void = () : void => {
        printf("drawn button at (%f, %f)\n", self.posx, self.posy)
    }
};

fun main(): int {
    let but : Button = summon Button(10., 0.);
    but.draw();
    banish but
};
